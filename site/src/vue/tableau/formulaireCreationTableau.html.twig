{% extends "generale.html.twig" %}

{% block page_title %}Ajout d'un tableau{% endblock %}

{% block page_content %}
    <div>
        <form method="post" action="{{ route("creerTableau") }}">
            <fieldset>
                <h3>Création d'un tableau</h3>
                <p>
                    <label for="nomColonne">Nom du tableau&#42;</label>
                    <label>
                        <input type="text" placeholder="Mon super tableau" name="nomTableau" id="nomTableau"
                               minlength="3"
                               maxlength="50" required>
                    </label>
                </p>
                <input type='hidden' name='action' value='creerTableau'>
                <input type='hidden' name='controleur' value='tableau'>
                <p>
                    <input type="submit" value="Créer le tableau">
                </p>
            </fieldset>
        </form>
    </div>
{% endblock %}
